<div>
  <div class="localgames-wrapper">
    {{#each games}}
    <div class="localgames-item">
      
        <h2>{{name}}</h2>
        <p><img src="{{imgPath}}"></p>
        <p>Genre:{{genre}}</p>
        <p>Serie:{{serie}}</p>
        <p>Publisher:{{publisher}}</p>
        <p>First release:{{toDate firstrelease}}</p>
        <p>Summary:{{summary}}</p>

        <div class="d-flex justify-content-between">
        <a class="btn btn-success" href="/detailslocalgame/{{_id}}">Details</a><br>
        <a class="btn btn-info" href="/updatelocalgame/{{_id}}">Edit Game</a><br>
        <a class="btn btn-danger" href="/deletelocalgame/{{_id}}" >Delete</a><br>
