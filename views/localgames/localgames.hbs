<div class="container">
  {{#each games}}
  <div class="row">
    <div class="col mx-auto">
      <div class="bg-white rounded overflow-hidden">

        <div class="px-4 pt-0 pb-4" style="background-color: #ffb320;">
          <div class="media align-items-end profile-header">
            <div class="profile mr-3">
              <img id="cover-url" src="{{imgPath}}" class="rounded mb-2 img-thumbnail">
            </div>
            <div class="media-body mb-5 text-white">
              <h4 id="game-name" class="mt-0 mb-0" style="color: black">{{name}}</h4>
              <p id="release-date" class="small mb-4" style="color: black">{{toDate2 firstrelease}} {{genre}}, {{serie}}, {{publisher}}</p>
            </div>
          </div>
        </div>

        <div class="bg-light p-4 d-flex justify-content-end">
          <div>
            <div class="d-flex justify-content-around">
              <a class="btn btn-success" href="/detailslocalgame/{{_id}}">Details</a><br>
              <a class="btn btn-info ml-5" href="/updatelocalgame/{{_id}}">Edit Game</a><br>
              <a class="btn btn-danger ml-5" href="/deletelocalgame/{{_id}}">Delete</a><br>
            </div>
          </div>
        </div>

        <div class="py-4">
          <h5 class="mb-3">Summary</h5>
          <div class="p-4 bg-light rounded shadow-sm">
            <p id="summary" class="font-italic mb-0">{{summary}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>