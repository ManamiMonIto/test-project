<div class="login-container">
  <form action="/login" method="POST" id="form-container" class="p-3 mb-2 bg-dark text-white">

    <div class="m-2">
      <h1 class="text-center">Welcome Back!</h1>
    </div>

    <div class="form-group">
      {{!-- <label for="username">Username:</label> --}}
      <input class="form-control" type="text" name="username" placeholder="username" style="width:100%;height:4vh;">
    </div>

    <div class="form-group">
      {{!-- <label for="password">Password:</label> --}}
      <input class="form-control" type="password" name="password" placeholder="password" style="width:100%;height:4vh;">
    </div>

    <div class="p-2">
      {{#if message}}
      <div class="error-message">{{ message }}</div>
      {{/if}}
    </div>

    <div class="p-2 d-flex justify-content-center">
      <input class="btn btn-success" type="submit" value="Log In">
    </div>

    <div class="p-2">
      <div class="d-flex justify-content-around">
        <a href="/github">
          <div class="btn btn-outline-light">Log in via <i class="fab fa-github"></i></div>
        </a>
        <a href="/google">
          <div class="btn btn-outline-light">Log in via <i class="fab fa-google"></i></div>
        </a>
      </div>
    </div>

  </form>
</div>